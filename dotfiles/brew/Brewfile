brew "wget"                    # Download files from the web
brew "cmake"                   # Cross-platform build system
brew "fd"                      # Fast alternative to find
brew "fzf"                     # Fuzzy finder for command line
brew "bat"                     # Cat with syntax highlighting
brew "eza"                     # Modern replacement for ls
brew "ripgrep"                 # Fast text search tool
brew "gh"                      # GitHub CLI
brew "git-lfs"                 # Git Large File Storage
brew "dialog"                  # Display dialog boxes from shell scripts
brew "neovim"                  # Modern Vim-based text editor
brew "pkg-config"              # Helper tool for compiling applications
brew "cairo"                   # 2D graphics library
brew "pango"                   # Text layout and rendering library
brew "libpng"                  # PNG image library
brew "jpeg"                    # JPEG image library
brew "giflib"                  # GIF image library
brew "librsvg"                 # SVG rendering library
brew "pixman"                  # Low-level pixel manipulation library
brew "fastfetch"               # System information tool
brew "tmux"                    # Terminal multiplexer
brew "tree"                    # Display directory structure as tree
brew "watch"                   # Execute program periodically
brew "zsh-autosuggestions"     # Fish-like autosuggestions for zsh
brew "nvm"                     # Node Version Manager
brew "glslang"                 # OpenGL/Vulkan shader compiler

